    <!-- Search Wrapper Area Start -->
    <div class="search-wrapper section-padding-100">
        <div class="search-close">
            <i class="fab fa-close" aria-hidden="true"></i>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="search-content">
                        <form action="#" method="get">
                            <input type="search" name="search" id="search" placeholder="Type your keyword...">
                            <button type="submit"><img src="img/core-img/search.png" alt=""></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Search Wrapper Area End -->

    <!-- ##### Main Content Wrapper Start ##### -->
    <div class="main-content-wrapper d-flex clearfix">

        <!-- Mobile Nav (max width 767px)-->
        <div class="mobile-nav">
            <!-- Navbar Brand -->
            <div class="amado-navbar-brand">
                <a href="index.html"><img src="img/core-img/logo.png" alt=""></a>
            </div>
            <!-- Navbar Toggler -->
            <div class="amado-navbar-toggler">
                <span></span><span></span><span></span>
            </div>
        </div>

        <!-- Header Area Start -->
        <header class="header-area clearfix">
            <!-- Close Icon -->
            <div class="nav-close">
                <i class="fas fa-times" aria-hidden="true"></i>
            </div>
            <!-- Logo -->
            <div class="logo">
                <a href="index.html"><img src="img/core-img/logo.png" alt=""></a>
            </div>

            <!-- Amado Nav -->
            <nav class="amado-nav">
                <ul>
                    <li class="active"><a href="index.html">Accueil</a></li>
                    <li><a href="shop.html">Boutique</a></li>
                    
                    <li><a href="checkout.html">Paiement</a></li>
                </ul>
            </nav>
            <!-- Cart Menu -->
            <div class="cart-fav-search mb-40">
                
                
                <a href="{{ path("panier") }}" class="cart-nav"><div class="fas fa-shopping-cart"></div> Panier <span>({{ app.session.get('panier[0][quantite]')}})</span></a>
                
                {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                {% if is_granted("ROLE_ADMIN") %}
                    <a href="{{ path("membre_index") }}" class="cart-nav "> <div class="fas fa-users"></div> Gérer les membres</a>
                    <a href="{{ path("jouet_index") }}" class="cart-nav "> <div class="fas fa-puzzle-piece"></div> Gérer les Jouets</a>
                {% endif %}
                <a href="{{ path("app_logout") }}" class="cart-nav "> <div class="fas fa-sign-out-alt"></div> Déconnexion</a>
                {% else %}
                    <a href="{{ path("app_inscription") }}"><div class="fas fa-pen"></div> Inscription</a>
                    <a href="{{ path("app_login") }}" class="cart-nav "> <div class="fas fa-sign-in-alt"></div> Connexion</a>

                {% endif %}
                
            </div>
            <!-- Button Group -->
            <div class="amado-btn-group mt-30 mb-70">
                <a href="#" class="btn amado-btn mb-15">%PROMO%</a>
            </div>
        
            <!-- Social Button -->
            <div class="social-info d-flex justify-content-between">
                <a href="#"><i class="fab fa-pinterest" aria-hidden="true"></i></a>
                <a href="#"><i class="fab fa-instagram" aria-hidden="true"></i></a>
                <a href="#"><i class="fab fa-facebook" aria-hidden="true"></i></a>
                <a href="#"><i class="fab fa-twitter" aria-hidden="true"></i></a>
            </div>
        </header>
        <!-- Header Area End -->
    {% block body %}

    {% endblock %}


