<form method="post" action="{{ path('membre_delete', {'id': membre.id}) }}" onsubmit="return confirm('Êtes vous sûr de vouloir supprimer ce membre ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ membre.id) }}">
    <button class="btn amado-btn-red w-100">Supprimer</button>
</form>
