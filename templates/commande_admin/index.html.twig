{% extends 'base.html.twig' %}

{% block title %}Les commandes{% endblock %}

{% block body %}
<h2>Les commandes</h2>
			{% for type, messages in app.flashes %}
				<div class="alert alert-{{ type }}">
					{% for msg in messages %}
						{{ msg|raw }}
					{% endfor %}
				</div>
			{% endfor %}
{% for commande in commandes %}
        <table class="table">
        <thead>
            <tr>
                <th>n°commande</th>
                <th>Membre</th>
                <th>Date de la commande</th>
                <th>Total</th>
                <th>Etat de la commande</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{commande.id}}</td>
                <td>{{ commande.membre.pseudo }}</td>
                <td>{{commande.dateEnregistrement|date("d/m/Y")}}</td>
                <td>{{commande.montant}} €</td>
                <td>{{commande.etat}}</td>
                <td>
                    <a href="{{ path("commande", {"id": commande.id}) }}">
                                <i class="fa fa-book"></i>
                            </a>
                    <a href="{{ path("modifier_commande", {"id": commande.id}) }}">
                                <i class="fa fa-pen"></i>
                            </a>
                </td>
            </tr>
        </tbody>
    </table>
    {% endfor %}
{% endblock %}
